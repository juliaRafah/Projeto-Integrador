generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user {
  id Int @id @unique @default(autoincrement())

  email String @unique
  document String @unique
  name String?
  username String @unique
  password String

  created_ad DateTime @default(now())
  updated_ad DateTime @updatedAt
}

model game {
  id Int @id @unique @default(autoincrement())

  name String
  releaseDate String
  gender String
  link String @unique
  imageURL String?
  description String
  developer String
  distributor String
  price String

  created_ad DateTime @default(now())
  updated_ad DateTime @updatedAt
}

model assessment {
  id Int @id @unique @default(autoincrement()) 

  note String
  comment String?

  created_ad DateTime @default(now())
  updated_ad DateTime @updatedAt
}